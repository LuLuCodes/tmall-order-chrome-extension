{
  "manifest_version": 2,

  "name": "tmall-order-chrome-extension",
  "description": "基于vue的chrome插件",
  "version": "1.0.0",
  "browser_action": {
    "default_title": "tmall-order-chrome-extension",
    "default_icon": "assets/logo.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequestBlocking",
    "notifications",
    "tabs",
    "webRequest",
    "http://*/",
    "https://*/",
    "<all_urls>",
    "storage",
    "activeTab",
    "cookies"
  ],
  "bacground": {
    "scripts": ["js/background.js"]
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://www.tmall.com/"],
      "css": ["css/content_get_order.css"],
      "js": ["js/content_get_order.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://detail.tmall.com/item.htm*"],
      "css": ["css/content_select_goods.css"],
      "js": ["js/content_select_goods.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://buy.tmall.com/order/confirm_order.htm*"],
      "css": ["css/content_buy.css"],
      "js": ["js/content_buy.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["fonts/*", "inject.js"]
}
